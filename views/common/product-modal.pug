div(class="modal fade" id=`deleteModal-${product.id}` tabindex="-1" aria-labelledby=`deleteModal-${product.id}` aria-hidden="true")
    div(class="modal-dialog")
        div(class="modal-content")
            div(class="modal-header")
                h5(class="modal-title" id=`deleteModal-${product.id}`) Delete Product
                button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
            div(class="modal-body")
                p Are you sure you want to delete #{product.name}?
            div(class="modal-footer")
                button(type="button" class="btn btn-secondary" data-bs-dismiss="modal") Close
                form(action="/delete" method="POST" style="display:inline;")
                    input(type="hidden" name="id" value=product._id)
                    button(type="submit" class="btn btn-danger") Delete

div(class="modal fade" id=`updateModal-${product._id}` tabindex="-1" aria-labelledby=`updateModal-${product._id}` aria-hidden="true")
  div(class="modal-dialog")
    div(class="modal-content")
      div(class="modal-header")
        h5(class="modal-title" id=`updateModal-${product._id}`) Update Product
        button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
      div(class="modal-body")
        form(action="/update" method="POST" enctype="multipart/form-data")
          div
            label(for="name") Name:
            input(type="text" name="name" value=product.name, required)
          div
            label(for="category") Category:
            select(name="category" id="category" required)
                option(value="" selected=product.category == "") Select part category
                option(value="CPU" selected=product.category == "CPU") CPU
                option(value="GPU" selected=product.category == "GPU") GPU
                option(value="RAM" selected=product.category == "RAM") RAM
                option(value="SSD" selected=product.category == "SSD") SSD

          div
            label(for="brand") Brand:
            input(type="text" name="brand" value=product.brand, required)
          div
            label(for="specifications") Specifications:
            input(type="text" name="specifications" value=product.specifications, required)
          div
            label(for="price") Price:
            input(type="number" step="0.01" name="price" value=product.price, required)
          div
            label Image Source:
            div.d-flex.align-items-center
              input(type="radio" name="imgSource" id="imgUrlRadio" value="url" checked onchange="toggleImageInput()")
              label(for="imgUrlRadio") URL
              input(type="radio" name="imgSource" id="imgUploadRadio" value="upload" onchange="toggleImageInput()")
              label(for="imgUploadRadio") Upload
          div(id="imgUrlInput")
            label(for="imgUrl") Image URL:
            input(type="text" name="imgUrl" value=product.imgUrl)
          div(id="imgUploadInput" style="display: none;")
            label(for="imgUrl") Image Upload:
            input(type="file" name="imgUrl")
          div(class="modal-footer")
            button(type="button" class="btn btn-secondary" data-bs-dismiss="modal") Close
            input(type="hidden" name="id" value=product._id)
            button(type="submit" class="btn btn-primary") Update


