extends common/layout

block layout-content 
  .main-content 
    .container.mt-5
      h1.page-title.text-center Product List

      .row.mb-5
        each product in products
          .col-md-4.mb-4
            .card
              img.card-img-top(src=(product.imgUrl ? product.imgUrl : 'https://i.pinimg.com/1200x/17/22/3e/17223eceba2258293d754117d33afc57.jpg'), alt=product.name, width="100%")
              .card-body
                h5.card-title #{product.name}
                p.card-text Category: #{product.category}
                p.card-text Brand: #{product.brand}
                p.card-text Specification: #{product.specifications}
                p.card-text Price: $#{product.price}
                button(type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target=`#updateModal-${product._id}`) Update
                button(type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target=`#deleteModal-${product._id}`) Delete
                include common/product-modal.pug

